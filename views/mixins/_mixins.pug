mixin widgetHeader(header) 
    .widget-header
        h3.widget-heading= header
        a.widget-view-all(href="#") 
            span View all
            img(src="./images/widget/icon-cheveron.svg", alt="")

mixin followItem(avatar, name, id)
    .follow 
        .follow-user 
            .follow-user-avatar 
                img(src=avatar , alt="")
            .follow-user-info 
                h4.follow-user-name= name 
                p.follow-user-id= id 
        button.button.button--primary 
            span Follow

mixin historyItem(img, author, name, played, liked)
    .history    
        .history-image 
            img(src= img, alt="")
        .history-content 
            h4.history-podcast-author= "Perspective with " + author
            h4.history-podcast-name= name
            .history-podcast-footer
                span 
                    img(src="./images/history/icon-play.svg", alt="") 
                    span= played
                span
                    img(src="./images/history/icon-heart.svg", alt="")
                    span= liked

mixin topicItem(img, tilte, quantity)
    .topic
        img.topic-image(src=img alt="")
        .topic-content
            h4.topic-tilte=  tilte
            span.topic-quantity= quantity
