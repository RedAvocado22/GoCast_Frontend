mixin menuItem(text, icon, href = "#") 
    li.menu-item
        a.menu-link(href= href)
            img.menu-icon(src= icon alt = text + ' icon')
            span.menu-text= text

mixin toggle()
    label.toggle
        input(type="checkbox", name="")
        .toggle-main
            .toggle-spinner 

